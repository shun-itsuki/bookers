<h1>Books</h1>

<table>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show" , book_path(book.id), class:"show_#{book.id}" %></td>
    <td><%= link_to "edit" , edit_book_path(book.id), class:"edit_#{book.id}" %></td>
    <td><%= link_to "destroy" , book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class:"destroy_#{book.id}" %></td>
  </tr>
  <% end %>
</table>

<!-- コメント送信用 -->
<h2>New Book</h2>
<%= form_for(@book) do |f| %>
<h4>title</h4>
<%= f.text_field :title , class:"book_title" %>
<h4>body</h4>
<%= f.text_area :body , class:"book_body"%>
<br><%= f.submit "create book" %></br>
<% end %>
