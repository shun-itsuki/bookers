<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<h4>title</h4>
 <%= f.text_field :title %>
<h4>body</h4>
 <%= f.text_area :body %>
<br><%= f.submit 'update book' %></br>
<% end %>

<%= link_to "show" , book_path(@book.id), class:"show_#{@book.id}" %>
<%= link_to 'back', books_path, class:"back" %>
